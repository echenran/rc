#!/usr/bin/env bash

# ls with colors
alias ls='ls -G'
#alias ls='ls --color=always'

# ls all
alias l='ls -lAG'

# ls + sort by file size + display K, M, G, etc.
alias lss='ls -lAGSh'

# ls + sort by last created with most recent at bottom - doesn't work intuitively
alias lc='ls -lAGUr'

# ls + sort by last modified with most recent at bottom
alias lm='ls -lAGtr'

# ls + sort by last read with most recent at bottom
alias lr='ls -lAtur'

# ls + sort by last accessed with most recent at bottom
alias la='ls -lAGur'

#----------tmux----------
alias list='tmux list-sessions'
alias ta='tmux attach -t'
alias tss='tmux switch-client -t'
