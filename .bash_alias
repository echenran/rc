#!/usr/bin/env bash

# General shortcuts

# ls with colors
alias ls='ls --color=always'
# ls all
alias l='ls --color=always -lA'
# ls + sort by file size + display K, M, G, etc.
alias lss='ls --color=always -lAhS'
# ls + sort by last created with most recent at bottom - doesn't work intuitively
alias lc='ls --color=always -lAUr'
# ls + sort by last modified with most recent at bottom
alias lm='ls --color=always -lAtr'
# ls + sort by last accessed with most recent at bottom
alias la='ls --color=always -lAur'
